{
  "extends": ["plugin:@typescript-eslint/recommended"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "plugins": ["react", "react-hooks", "tailwindcss", "unicorn", "babel", "@typescript-eslint"],
  "rules": {
    "unicorn/filename-case": [
      "error",
      {
        "cases": {
          "pascalCase": true
        }
      }
    ]
  },
  "overrides": [
    {
      "files": ["**/*.ts"],
      "rules": {
        "unicorn/filename-case": [
          "error",
          {
            "cases": {
              "camelCase": true,
              "kebabCase": true
            }
          }
        ]
      }
    },
    {
      "files": ["src/components/icon/index.tsx"],
      "rules": {
        "@typescript-eslint/no-var-requires": "off"
      }
    }
  ],
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
