{
  "kind": "collectionType",
  "collectionName": "blog_categories",
  "info": {
    "name": "Category"
  },
  "options": {
    "increments": false,
    "timestamps": false,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "posts": {
      "via": "categories",
      "plugin": "blog",
      "collection": "post",
      "dominant": true
    },
    "parent": {
      "plugin": "blog",
      "collection": "category",
      "via": "children",
      "dominant": true
    },
    "children": {
      "plugin": "blog",
      "collection": "category",
      "via": "parent"
    },
    "slug": {
      "required": true,
      "type": "uid",
      "targetField": "name"
    }
  }
}
