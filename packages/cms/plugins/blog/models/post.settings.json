{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Post"
  },
  "options": {
    "increments": true,
    "timestamps": false,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "text": {
      "type": "richtext",
      "required": true
    },
    "cover": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "videos"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "required": true,
      "type": "uid",
      "targetField": "name"
    },
    "categories": {
      "plugin": "blog",
      "via": "posts",
      "collection": "category"
    }
  }
}
