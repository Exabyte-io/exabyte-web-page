{
  "name": "template",
  "description": "Includes all required tools and packages to bootstrap app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "Vlad Volkov",
      "email": "vlad.volkov@bndigital.co",
      "url": "https://github.com/vladyslavvolkov"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "yarn": ">=2.0.0"
  },
  "engineStrict": false,
  "devDependencies": {
    "@graphql-codegen/cli": "^1.21.5",
    "@graphql-codegen/typescript": "^1.22.1",
    "@graphql-codegen/typescript-operations": "^1.18.0",
    "@graphql-codegen/typescript-react-apollo": "^2.2.5",
    "@graphql-mesh/cli": "^0.30.1",
    "@graphql-mesh/graphql": "^0.17.10",
    "@graphql-mesh/runtime": "^0.16.6",
    "@semantic-release/github": "^7.2.3",
    "@semantic-release/npm": "^7.1.3",
    "@types/node": "^15.12.2",
    "@typescript-eslint/eslint-plugin": "^4.26.1",
    "@typescript-eslint/parser": "^4.26.1",
    "concurrently": "^6.2.0",
    "eslint": "^7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-workspaces": "^0.6.2",
    "graphql": "^15.5.0",
    "node-gyp": "^8.1.0",
    "prettier": "^2.3.1",
    "rimraf": "^3.0.2",
    "semantic-release": "^17.4.3",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.2"
  },
  "scripts": {
    "graphql": "graphql-mesh serve",
    "generate": "graphql-codegen",
    "apollo": "yarn workspace @template/apollo-api-gateway run start",
    "angular": "yarn workspace @template/angular-website run start",
    "strapi": "yarn workspace @template/strapi-cms run start",
    "antd": "yarn workspace @template/react-antd-website run start",
    "react": "yarn workspace @template/react-website run start",
    "tailwind": "yarn workspace @template/react-tailwind-website run start",
    "vue": "yarn workspace @template/vue-website run start",
    "html": "yarn workspace @template/html-website run start",
    "storybook": "yarn workspace @template/react-storybook run start",
    "upgrade": "yarn up '*'",
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src && stylelint --fix packages/*/src/**/*.{vue,less}",
    "lint": "prettier --check packages/*/src && eslint packages/*/src && stylelint --fix packages/*/src/**/*.less",
    "start": "concurrently 'yarn:generate' 'yarn:strapi' 'yarn:react'"
  }
}
