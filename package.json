{
  "name": "exabyte",
  "description": "Includes all required tools and packages to bootstrap app development using NodeJS stack",
  "version": "1.0.0",
  "private": true,
  "license": "proprietary",
  "maintainers": [
    {
      "name": "Vlad Volkov",
      "email": "vlad.volkov@bndigital.co",
      "url": "https://github.com/vladyslavvolkov"
    }
  ],
  "author": {
    "name": "Vlad Volkov",
    "email": "vlad.volkov@bndigital.co",
    "url": "https://github.com/vladyslavvolkov"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "engines": {
    "yarn": ">=2.0.0"
  },
  "engineStrict": false,
  "devDependencies": {
    "@graphql-codegen/cli": "^2.2.0",
    "@graphql-codegen/typescript": "^2.2.2",
    "@graphql-codegen/typescript-operations": "^2.1.4",
    "@graphql-codegen/typescript-react-apollo": "^3.1.4",
    "@types/node": "^16.9.1",
    "@typescript-eslint/eslint-plugin": "^4.31.0",
    "@typescript-eslint/parser": "^4.31.0",
    "concurrently": "^6.2.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-graphql": "^4.0.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-workspaces": "^0.6.2",
    "graphql": "^15.5.3",
    "node-gyp": "^8.2.0",
    "prettier": "^2.4.0",
    "stylelint": "^13.13.1",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "generate": "graphql-codegen",
    "cms": "yarn workspace @exabyte/cms run start",
    "website": "yarn workspace @exabyte/website run start",
    "upgrade": "yarn up '*'",
    "fix": "prettier --write packages/*/src && eslint --fix packages/*/src && stylelint --fix packages/*/src/**/*.less",
    "lint": "prettier --check packages/*/src && eslint packages/*/src && stylelint --fix packages/*/src/**/*.less",
    "start": "concurrently 'yarn:generate' 'yarn:strapi' 'yarn:react'"
  }
}
